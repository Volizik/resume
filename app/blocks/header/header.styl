.header
	margin-top 50px
	padding-y(10px)
	display block
	.frame
		border 10px solid color-frame
		size(350px)
		transition transform .3s
		&:hover
			box-shadow 7px -12px 20px #000
			transform rotate(90deg) scale(.7)
			img
				transform rotate(-90deg) scale(1.7)
		img
			position absolute
			top 30px
			left 30px
			height 250px
			transform rotate(-45deg) scale(2)
			transition .3s
	&__photo
		display flex
		flex-shrink 0
		width 30%
		min-width 400px
		+below(800px)
			display none
	&__text
		position relative
		display flex
		flex-direction column
		justify-content center
	&__title
		margin 0
		font-size 45px
		text-transform uppercase
	&__subtitle
		margin 0
		font-size 30px
	&__desc
		margin-y(30px)
		font-size 18px
		line-height 30px
