.header
	margin-top 50px
	padding-y(10px)
	display block
	.frame
		border 10px solid color-frame
		size(350px)
		transition transform .3s
		&:hover
			transform scale(0.7)
			box-shadow 12px 7px 20px #000
			img
				transform rotate(0) scale(1.7)
		img
			height 250px
			top 30px
			position absolute
			left 30px
			transform rotate(-45deg) scale(2)
			transition .3s
	&__photo
		display flex
		flex-shrink 0
		width 30%
		min-width 400px
	&__text
		position relative
		display flex
		flex-direction column
		justify-content center
	&__title
		margin 0
		font-size 45px
	&__subtitle
		margin 0
		font-size 30px
	&__desc
		margin-y(30px)
		font-size 18px
		line-height 30px
