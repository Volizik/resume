include ../col/col
include ../title/title
include ../section/section
include ../skills/skills
include ../languages/languages
include ../contact-me/contact-me
include ../portfolio/portfolio
include ../menu-btn/menu-btn

mixin main()
	+b('main').main&attributes(attributes)
		+menu-btn()
		.container
			+col()
				+section()
					+title("assets/images/skills.png", "Skills")
					+skills(getData('skills'))
				+section()
					+title("assets/images/languages.png", "Languages")
					+languages(getData('languages'))
				+section()
					+title("assets/images/contact-me.png", "Contact me")
					+contact-me(getData('contact-me'))
			+col()
				+section()
					+title("assets/images/education.png", "Portfolio")
					+portfolio(getData('portfolio'))





