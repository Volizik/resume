.menu-btn
	position absolute
	top 30px
	left 15px
	width 40px
	height 33px
	padding 5px
	display none
	flex-direction column
	justify-content space-between
	cursor pointer
	+below(992px)
		display flex

	&__row
		display block
		width 100%
		height 4px
		background-color #fff
		transition .4s
		&:first-of-type
			transform rotate(45deg)
		&:last-of-type
			transform rotate(-45deg)
	&__active
		.menu-btn__row
			&:first-of-type
				transform rotate(-45deg)
			&:last-of-type
				transform rotate(45deg)
