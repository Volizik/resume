.col
	padding-x(45px)
	display flex
	flex-direction column
	flex-wrap wrap
	transition width .5s
	&:last-of-type
		border-left 15px solid color-main
		+below(992px)
			margin-left 60px
			width calc(100% - 60px)
		+below(400px)
			margin-left 0
			margin-top 50px
			border-left none
			width 100%
	&:first-of-type
		+below(992px)
			display flex
			flex-direction column
			align-items  center
			margin-top: 50px
			flex-shrink 0
			padding 0
			overflow hidden
			width 0
