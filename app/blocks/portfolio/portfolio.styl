.portfolio
	display flex
	flex-wrap wrap
	&__item
		position relative
		size(33.33%)
		padding 10px
		display block
		overflow hidden
		border-radius 50px 0 50px 0
		&:hover
			span
				opacity 1
		img
			size(100%)
			object-fit cover
			border-radius 50px 0 50px 0
		span
			display flex
			justify-content center
			align-items center
			position absolute
			top 0
			left 0
			size(100%)
			font-size 30px
			font-weight 700
			text-transform uppercase
			color #fff
			background-color color-main
			filter opacity(.8)
			opacity 0
			transition .2s
