.portfolio
	display flex
	flex-wrap wrap
	&__item
		position relative
		size(33.33%)
		padding 10px
		display block
		overflow hidden
		border-radius 50px 0 50px 0
		transition .2s
		&:hover
			box-shadow 3px 5px 10px #000
			span
				opacity 1
				transition .2s
		img
			size(100%)
			object-fit cover
			border-radius 50px 0 50px 0
		span
			display flex
			justify-content center
			align-items center
			position absolute
			top 0
			left 0
			size(100%)
			font-size 30px
			font-weight 700
			text-transform uppercase
			color #fff
			background-color color-main
			opacity 0
			filter opacity(.8)
			transition .2s
